<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/std_elevation"
    android:elevation="@dimen/std_elevation"
    app:cardCornerRadius="@dimen/std_elevation"
    app:cardBackgroundColor="@color/white_color_flat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/fav_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="steve-a"
            android:textStyle="bold"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/fav_name_text"
            android:layout_toRightOf="@+id/fav_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Steve"
            android:textStyle="bold"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/fav_message_count_text"
            android:layout_toRightOf="@+id/fav_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fav_name_text"
            android:text="Messages: 1"
            android:textColor="@color/black_color"/>

        <TextView
            android:id="@+id/fav_count_text"
            android:layout_toRightOf="@+id/fav_username_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fav_message_count_text"
            android:text="Favorites: 2"
            android:textColor="@color/black_color"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>