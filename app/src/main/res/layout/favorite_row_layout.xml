<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/std_elevation"
    android:elevation="@dimen/std_elevation"
    app:cardCornerRadius="@dimen/std_elevation"
    app:cardBackgroundColor="@color/white_color_flat">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/activity_horizontal_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fav_profile_pic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:baselineAlignBottom="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/placeholder"
            app:civ_border_color="#000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/fav_name_text"
            android:layout_toRightOf="@+id/fav_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Steve"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black_color"/>
        <ImageView
            android:id="@+id/fav_msg_icon"
            android:layout_below="@+id/fav_name_text"
            android:layout_toRightOf="@+id/fav_profile_pic"
            android:src="@drawable/message"
            android:layout_width="35dp"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/fav_message_count_text"
            android:layout_toRightOf="@+id/fav_msg_icon"
            android:layout_below="@+id/fav_name_text"
            android:layout_margin="6dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@color/black_color"/>

        <ImageView
            android:id="@+id/fav_icon"
            android:layout_below="@+id/fav_name_text"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/fav_message_count_text"
            android:src="@drawable/fav_on"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/fav_count_text"
            android:layout_toRightOf="@+id/fav_icon"
            android:layout_margin="6dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fav_name_text"
            android:text="2"
            android:textColor="@color/black_color"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>